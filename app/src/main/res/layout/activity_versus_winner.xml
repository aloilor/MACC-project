<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".VersusWinnerActivity">


    <LinearLayout
        android:id="@+id/cubeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>

    <com.example.macc_project.graphicsApp.MyGLSurfaceView
        android:id="@+id/myGLSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp" />


    <TextView
        android:id="@+id/scoreTitleYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/electrolize"
        android:text="Your final score is:"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreTitleOpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="550dp"
        android:fontFamily="@font/electrolize"
        android:text="Your opponent's final score is:"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/electrolize"
        android:text="30"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreOpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/electrolize"
        android:text="30"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="146dp"
        android:fontFamily="@font/electrolize"
        android:text="pts"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="656dp"
        android:fontFamily="@font/electrolize"
        android:text="pts"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/electrolize"
            android:text="Back to Home Page"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

    </LinearLayout>
</RelativeLayout>